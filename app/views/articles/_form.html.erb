<% if @article.errors.any? %>
	<h2> The following errors prevented from saving the article</h2>
	<ul>
		<% @article.errors.full_messages.each do |error_message| %>
			<li style="color: red"><%= error_message %></li>
		<% end %>
	</ul>
<% end %>
<%= form_with(model: @article, local: true) do |f|%>
	<%= f.label :title %><br/>
	<%= f.text_field :title %><br/><br/>
	<%= f.label :description %><br/>
	<%= f.text_area :description %><br/><br/>
	<%= f.submit %>
<% end %>